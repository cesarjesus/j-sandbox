<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <el-resolver>bookstore.bookstore.web.util.JsfCrudELResolver</el-resolver>
    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/welcomeJSF.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>book</managed-bean-name>
        <managed-bean-class>bookstore.bookstore.web.BookController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>bookJpa</managed-bean-name>
        <managed-bean-class>bookstore.bookstore.beans.BookFacade</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>bookstore.bookstore.model.Book</converter-for-class>
        <converter-class>bookstore.bookstore.web.BookConverter</converter-class>
    </converter>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_create</from-outcome>
            <to-view-id>/book/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_list</from-outcome>
            <to-view-id>/book/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_edit</from-outcome>
            <to-view-id>/book/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_detail</from-outcome>
            <to-view-id>/book/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
